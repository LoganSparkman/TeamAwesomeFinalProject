@page
@model WebApplication1.Pages.Grades.ClassListModel

@{
    ViewData["Title"] = "ClassList";
}

<h1>Your Classes</h1>
<a asp-page="./Graph">Graphs</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Term)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Class) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.TermID)
            </td>
            <td>
                <a asp-page="./StudentList" asp-route-classId="@item.ClassID">Students</a> |
                <a asp-page="./AssessmentList" asp-route-classId="@item.ClassID">Assessments</a> |
                <a asp-page="./ClassGraphs" asp-route-classId="@item.ClassID">Class Graphs</a>
            </td>
        </tr>
}
    </tbody>
</table>
