@page
@model WebApplication1.Pages.Notes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Note.NoteID" hidden />
    <div class="row">
        <div class="form-group col-3">
            <label asp-for="Note.StudentID" class="control-label"></label>
            <select asp-for="Note.StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
        </div>
        <div class="form-group col-4">
            <label asp-for="Note.NoteTypeID" class="control-label"></label>
            <select asp-for="Note.NoteTypeID" class="form-control" asp-items="ViewBag.NoteTypeID"></select>
        </div>
        <div class="form-group col-4">
            <label asp-for="Note.UserID" class="control-label"></label>
            <select asp-for="Note.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Note.Content" class="control-label"></label>
        <textarea asp-for="Note.Content" class="form-control"></textarea>
        <span asp-validation-for="Note.Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index" asp-route-id="@Model.Note.StudentID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
