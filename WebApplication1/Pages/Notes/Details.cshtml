@page
@model WebApplication1.Pages.Notes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="form-group col-3">
        <label asp-for="Note.Student" class="control-label"></label>
        <input asp-for="Note.Student.FirstName" disabled class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="Note.NoteType" class="control-label"></label>
        <input asp-for="Note.NoteType.Name" disabled class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="Note.IdentityUser" class="control-label"></label>
        <input asp-for="Note.IdentityUser.UserName" disabled class="form-control" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Note.Content" class="control-label"></label>
    <textarea asp-for="Note.Content" readonly class="form-control"></textarea>
    <span asp-validation-for="Note.Content" class="text-danger"></span>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Note.NoteID">Edit</a> |
    <a asp-page="Index" asp-route-id="@Model.Note.StudentID">Back to List</a>
</div>
