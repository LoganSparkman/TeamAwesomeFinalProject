            <td>
                @Html.DisplayFor(modelItem => item.GPSLatitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPSLongitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicSchoolLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuardianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuardianType)
            </td>
